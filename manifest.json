{
  "name": "gbf-BlueChestCounter",
  "version": "1.0.4",
  "manifest_version": 2,
  "description": "GBF青箱统计",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "蓝箱统计",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://game.granbluefantasy.jp/*",
        "*://gbf.game.mbga.jp/*"
      ],
      "js": [
        "js/jquery-3.5.1.min.js",
        "src/inject/inject.js"
      ]
    }
  ]
}